<!--создаем форму вопроса-->
<!--локальная переменная object из паршала errors теперь имеет такое же значение что и @question-->
<%= render 'shared/errors', object: @question %>

<%= form_with  model: @question do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
    <%= f.label :title %>
    </div>

    <div class="col-sm-10">
    <%= f.text_field :title, placeholder: 'Title', class: 'form-control'%>
    <!--    text_field - маленькое поле для ввода-->
    </div>
  </div>


  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
    <%= f.label :body %>
    </div>

    <div class="col-sm-10">
    <%= f.text_area :body, class: 'form-control'%>
    <!--    required: true - браузер проверяет заполненость поля-->
    <!--    text_area - большое поле для ввода-->
    <!--    , required: true, minlenght: 2-->
    </div>
  </div>

  <%= f.submit "Submit question!", class: 'btn btn-primary'%>
<% end %>